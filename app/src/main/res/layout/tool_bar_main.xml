<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background"
    android:paddingVertical="20dp"
    android:paddingStart="32dp"
    android:paddingEnd="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Title"
        android:text="Battery Packs"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imgSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/ic_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/imgPair"
        app:layout_constraintEnd_toStartOf="@+id/imgPair"
        app:layout_constraintTop_toTopOf="@+id/imgPair" />

    <ImageView
        android:id="@+id/imgPair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/ic_bluetooth_search_24"
        app:layout_constraintBottom_toBottomOf="@+id/imgMore"
        app:layout_constraintEnd_toStartOf="@+id/imgMore"
        app:layout_constraintTop_toTopOf="@+id/imgMore" />

    <ImageView
        android:id="@+id/imgMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="5dp"
        android:src="@drawable/ic_more_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
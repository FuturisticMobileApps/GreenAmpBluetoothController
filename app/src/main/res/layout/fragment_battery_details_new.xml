            android:id="@+id/icBackLoading"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_ios_24"
            android:tint="@color/black"

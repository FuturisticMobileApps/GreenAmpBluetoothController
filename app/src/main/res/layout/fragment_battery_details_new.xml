                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/LabelStyle"
                        android:layout_alignEnd="@+id/verticalGuideline"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:text="SOC" />


                    <com.example.greenampbluetoothcontroller.util.DynamicGradientTextView
                        android:id="@+id/tvSOC"
                        style="@style/SOCStyle"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/verticalGuideline"
                        tools:text="96%" />


